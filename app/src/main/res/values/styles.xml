<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreenButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/button_margin</item>
        <item name="android:layout_marginVertical">@dimen/button_margin_top_bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">@dimen/button_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/settings_text_color</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="iconTint">@color/settings_text_color</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_reg</item>
        <item name="android:fontWeight">400</item>
        <item name="android:paddingStart">@dimen/button_padding</item>
        <item name="android:paddingVertical">@dimen/settings_padding_top_bot</item>
        <item name="android:paddingEnd">@dimen/settings_padding_end</item>
        <item name="android:textColor">@color/settings_text_color</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
    </style>

    <style name="SettingsButtonStyle">
        <item name="android:layout_width">@dimen/setting_image_size</item>
        <item name="android:layout_height">@dimen/setting_image_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/setting_image_margin_start</item>
        <item name="android:layout_marginTop">@dimen/setting_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/setting_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/setting_margin_bot</item>
        <item name="android:background">@color/settings_background</item>
    </style>

    <style name="SongNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_reg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">top</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ArtistAndTimeStyle">
        <item name="android:textColor">@color/search_hint</item>
        <item name="android:fontFamily">@font/ys_display_reg</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SongArrowStyle">
        <item name="android:background">@color/settings_background</item>
    </style>

    <style name="SearchPlaceholderStyle">
        <item name="android:src">@drawable/search_placeholder</item>
    </style>

    <style name="SearchPlaceholderNoInternetStyle">
        <item name="android:src">@drawable/search_placeholder_no_internet</item>
    </style>

    <style name="RefreshButtonStyle">
        <item name="cornerRadius">54dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/main_text_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:text">@string/refresh_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>